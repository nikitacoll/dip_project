<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TestingActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/transparent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:id="@+id/ticket_timer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:textSize="18sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="7dp">
                    <ImageView
                        android:id="@+id/ticket_photo"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/ticket_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вопрос"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/project_font"/>
                <RadioGroup
                    android:id="@+id/ticket_answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <RadioButton
                        android:id="@+id/ticket_first_ans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ответ 1"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:fontFamily="@font/project_font"/>
                    <RadioButton
                        android:id="@+id/ticket_second_ans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ответ 2"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:fontFamily="@font/project_font"/>
                    <RadioButton
                        android:id="@+id/ticket_third_ans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ответ 3"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:fontFamily="@font/project_font"/>
                    <RadioButton
                        android:id="@+id/ticket_forth_ans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ответ 4"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:fontFamily="@font/project_font"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

</LinearLayout>